<Window x:Class="Menu.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Pepelito\Downloads\Image\bgImg.jpg"/>
        </Grid.Background>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock Text="Music Volume" Margin="10" HorizontalAlignment="Center" FontSize="16"/>
            <Slider x:Name="sliderVolume" Minimum="0" Maximum="100" Value="50" TickFrequency="10" IsSnapToTickEnabled="True" Margin="10" Width="200" Height="30" ValueChanged="sliderVolume_ValueChanged"/>
            <Button x:Name="btnMute" Width="60" Height="50" Margin="10" Click="btnMute_Click" Background="Transparent" BorderThickness="0">
                <Image x:Name="imgMute" Source="C:\Users\Pepelito\Downloads\Image\sound2.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
