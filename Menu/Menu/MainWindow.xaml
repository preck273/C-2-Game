<Window x:Class="Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">

        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Pepelito\Downloads\Image\bgImg.jpg"/>
        </Grid.Background>

        <StackPanel x:Name="MainButtonsPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" >
            <Button x:Name="btnPlay" Width="170" Height="45" Margin="10" Click="btnPlay_Click" Background="Transparent" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\Pepelito\Downloads\Image\Play.png" Width="170" Height="50" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnSettings" Width="170" Height="45" Margin="10" Click="btnSettings_Click"  Background="Transparent" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\Pepelito\Downloads\Image\settings2.png" Width="170" Height="50" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnScore" Width="170" Height="45" Margin="10" Click="btnScore_Click" Background="Transparent" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\Pepelito\Downloads\Image\score.png" Width="170" Height="50" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnQuit" Width="170" Height="45" Margin="10" Click="btnQuit_Click"  Background="Transparent" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\Pepelito\Downloads\Image\quit2.png" Width="170" Height="50" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- DataGrid to display scores -->
        <StackPanel x:Name="ScoresPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Visibility="Collapsed">
            <Button x:Name="btnBack" Width="170" Height="45" Margin="10" Click="btnBack_Click"  Background="Transparent" BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\Pepelito\Downloads\Image\back2.png" Width="170" Height="50" Margin="0,0,5,0"/>
                </StackPanel>
            </Button>
            <DataGrid x:Name="dataGridScores" AutoGenerateColumns="True" Width="200" Height="200" />
        </StackPanel>


    </Grid>
</Window>
